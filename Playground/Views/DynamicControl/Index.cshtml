    <![endif]-->
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".add-row").click(function (e) {
                e.preventDefault();
                var area = $("#area").val();
                var country = $("#country").val();
                var location = $("#location").val();
                var markup = "<tr><td><input type='checkbox' name='record'></td><td>" + area + "</td><td>" + country + "</td><td>" + location + "</tr>";
                $("table tbody").append(markup);
            });

            // Find and remove selected table rows
            $(".delete-row").click(function (e) {
                e.preventDefault();
                $("table tbody").find('input[name="record"]').each(function () {
                    if ($(this).is(":checked")) {
                        $(this).parents("tr").remove();
                    }
                });
            });
        });
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" id="area" placeholder="Organisational Area">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="country" placeholder="Organisational Country">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="location" placeholder="Organisational Location">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default add-row">Add Row</button>
                    </div>
                </form>
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                    <tr>
                        <th>Area</th>
                        <th>Country</th>
                        <th>Location</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <button type="button" class="btn btn-danger delete-row">Delete Row</button>
            </div>
        </div>
    </div><!-- /.container -->
