    @Html.LabelFor(m => m.Founder)<br/>
    @Html.TextBoxFor(m => m.Founder)
    @Html.ValidationMessageFor(m => m.Founder)<br/>

    @Html.LabelFor(m => m.ReasonFormed)<br/>
    @Html.TextBoxFor(m => m.ReasonFormed)
    @Html.ValidationMessageFor(m => m.ReasonFormed)<br/>

    @Html.LabelFor(m => m.OperationalAreaId)<br/>
    @Html.TextBoxFor(m => m.OperationalAreaId)
    @Html.ValidationMessageFor(m => m.OperationalAreaId)<br/>

    @Html.LabelFor(m => m.OperationalLocationId)<br/>
    @Html.TextBoxFor(m => m.OperationalLocationId)
    @Html.ValidationMessageFor(m => m.OperationalLocationId)<br/>

    @Html.LabelFor(m => m.Achievements)<br/>
    @Html.TextBoxFor(m => m.Achievements)
